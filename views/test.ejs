<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/showAlarm.css">
</head>
<body>
    <div id="frm">
        <div id="alarm-card-left">
            <div id="kind">
                <h1><%=alarm.kind.toUpperCase()%></h1>
            </div>
        </div>
        <div id="alarm-card-mid">
            <div>
                <h3><%=alarm.title.toUpperCase()%></h3>
            </div>
            <div>
                <p id="description"><%=alarm.description%></p>
            </div>
            <hr>
            <div id="causes">
                <h4 class="title">Possible Causes:</h4>
                <p><%=alarm.causes%></p>
            </div>
            <div id="reqActions">
                <h4 class="title">Required Actions</h4>
                <p><%=alarm.reqActions%></p>
            </div>
            <hr>
            <div class="detail">
                <p><span class="title">Section: </span><%=alarm.section%></p>
            </div>
            <div class="detail">
                <p><span class="title">System: </span><%=alarm.system%></p>
            </div>
            <div class="detail">
                <p><span class="title">Device: </span><%=alarm.device%></p>
            </div>
            <hr>
            <div class="detail">
                <p><span class="title">Sensor: </span><%=alarm.sensor%></p>
            </div>
            <div class="detail">
                <p><span class="title">Limit: </span><%=alarm.limit%></p>
            </div>
        </div>
        <div id="alarm-card-right">
            <h3>Box No: <%=alarm.boxNo%></h3>
            <table id="lampNo">
                <tr>
                    <td id="l1">1</td>
                    <td id="l2">2</td>
                </tr>
                <tr>
                    <td id="l3">3</td>
                    <td id="l4">4</td>
                </tr>
                <tr>
                    <td id="l5">5</td>
                    <td id="l6">6</td>
                </tr>
                <tr>
                    <td id="l7">7</td>
                    <td id="l8">8</td>
                </tr>
            </table>
        </div>
    </div>
    <script>
        const lampNo = <%-alarm.lampNo%>;
        const kind = <%-JSON.stringify(alarm.kind)%>;
        if(kind === "alarm"){
            document.getElementById('l'+lampNo).style.backgroundColor = "darkred"
            document.getElementById('kind').style.backgroundColor = "darkred"
            document.getElementById('kind').style.color = "white"
        }else{
            document.getElementById('l'+lampNo).style.backgroundColor = "orange"
            document.getElementById('l'+lampNo).style.color = "black"
            document.getElementById('kind').style.backgroundColor = "orange"
        }
        
        console.log(lampNo);
    </script>
</body>
</html>