<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/test.css">
</head>
<body>
    <div id="frm">
        <div id="alarm-card-left">
            <div id="kind">
                <h1>Add Alarm</h1>
            </div>
        </div>
        <div id="alarm-card-mid">
          <form>
            <div class="input-group">
                <label for="title" id="lbl-title">Title</label>
                <input type="text" name="title" id="title">
            </div>
            <fieldset class="radio-group" id="alert-type">
                <legend>Alert type</legend>
                <div class="radio-field">
                    <input type="radio" id="alarm" name="alert-type" value="alarm">
                    <label for="alarm">Alarm</label>
                </div>
                <div class="radio-field">
                    <input type="radio" id="defect" name="alert-type" value="defect">
                    <label for="defect">Defect</label>
                </div>
            </fieldset>
          </form>
        </div>
        <div id="alarm-card-right">
            <h3>Box No: </h3>
            <table id="lampNo">
                <tr>
                    <td id="l1">1</td>
                    <td id="l2">2</td>
                </tr>
                <tr>
                    <td id="l3">3</td>
                    <td id="l4">4</td>
                </tr>
                <tr>
                    <td id="l5">5</td>
                    <td id="l6">6</td>
                </tr>
                <tr>
                    <td id="l7">7</td>
                    <td id="l8">8</td>
                </tr>
            </table>
        </div>
    </div>
    <script>
        const float = (inputBoxId, lableId) => {
                document.getElementById(inputBoxId).addEventListener('focus', (e) => {
                document.getElementById(lableId).style = 'top: 0; margin-bottom: 10px; color: springgreen;'
                document.getElementById(inputBoxId).style.borderBottom = '1px solid springgreen'
            })
        }

        float('title', 'lbl-title')
    </script>
</body>
</html>